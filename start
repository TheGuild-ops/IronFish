dockerName=ghcr.io/iron-fish/ironfish:latest
apt-get update && apt-get upgrade -y

docker pull $dockerName 

docker stop  fish-node && docker rm  fish-node
docker stop  fish-miner && docker rm  fish-miner

docker run -d --restart always --tty --interactive --name fish-node --network host --volume $HOME/.ironfish:/root/.ironfish $dockerName 
docker run -d --restart always -i -t  --interactive --name fish-miner --network host --volume $HOME/.ironfish:/root/.ironfish $dockerName miners:start
