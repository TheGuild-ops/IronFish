dockerName=ghcr.io/iron-fish/ironfish:latest

docker pull $dockerName 
docker restart fish-node
docker restart fish-miner

docker run -d --rm --tty --interactive --name fish-node --network host --volume $HOME/.ironfish:/root/.ironfish $dockerName 
docker run -d -i -t  --interactive --name fish-miner --network host --volume $HOME/.ironfish:/root/.ironfish $dockerName miners:start
