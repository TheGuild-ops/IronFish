docker pull fish-node && docker restart fish-node
docker pull fish-miner && docker restart fish-miner

docker run -d --rm --tty --interactive --name fish-node --network host --volume $HOME/.ironfish:/root/.ironfish ghcr.io/iron-fish/ironfish:latest
docker run -d -i -t  --interactive --name fish-miner --network host --volume $HOME/.ironfish:/root/.ironfish ghcr.io/iron-fish/ironfish miners:start
